@{
    ViewBag.Title = "All Projects";
}

@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}




<br />




<div class="row">
    @foreach (Taskify.Models.Project project in ViewBag.Projects)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-card-list"> </i> Project: @project.Title</p>

                        <p><i class="bi bi-card-list"></i> Description: @project.Description</p>


                        @if (@project.User.UserName != null)
                        {
                            <p><i class="bi bi-person"> </i> Username: @project.User.UserName</p>
                        }


                      

                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div> <a class="btn btn-sm btn-success" href="/Projects/Edit/@project.Id">Edit Project</a> </div>

                        <div> <a class="btn btn-sm btn-success" href="/Projects/Show/@project.Id">Show Project</a> </div>

                    </div>
                </div>

            </div>
        </div>
    }

</div>


